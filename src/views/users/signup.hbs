<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Registrarse</h1>
            </div>
            <img src="/img/logo.png" alt="logo" class="rounded-circle mx-auto d-block m-4 logo">
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control mb-4" name="name" placeholder="Nombre de usuario" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control mb-4" name="email" placeholder="Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control mb-4" name="password" placeholder="password" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control mb-4" name="confirm_password" placeholder="password" value="{{confirm_password}}">
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary w-100">Registrarse</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>