<div class="row">
    {{#each participantes}}
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        Información del Participante <a href="/participantes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                    </h4>
                    <hr class="my-3">
                    <span class="h5">Nombre del participante:</span><p class="h6">{{nombreParticipante}}</p>
                    <hr class="my-2">
                    <span class="h5">Arte marcial que domina:</span><p class="h6">{{arteMarcial}}</p>
                    <hr class="my-2">
                    <span class="h5">Edad del participante:</span><p class="h6">{{edadParticipante}} Años</p>
                    <hr class="my-2">
                    <span class="h5">Entrenador:</span><p class="h6">{{entrenador}}</p>
                    <hr class="my-2">
                    <span class="h5">Color de indumentaria:</span><p class="h6">{{colorCamiseta}}</p>
                    <hr class="my-2">
                    <span class="h5">País que representa:</span><p class="h6">{{paisOrigen}}</p>


                    <form action="/participantes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <div class="mt-3">
                            <button class="btn btn-danger w-100" type="submit">Borrar</button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>

    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h2>Bienvenido {{user.name}}</h2>
                <p class="lead"> No se han agregado participantes.</p>
                <a href="/participantes/add" class="btn btn-success">Agregar!</a>
                
            </div>
        </div>

    {{/each}}
</div>


